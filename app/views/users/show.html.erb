<div class="container">
  <h1 class="mt-3 mb-4">Your Profile</h1>

  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><strong>Name:</strong> <%= @user.name %></h5>
          <p class="card-text"><strong>Surname:</strong> <%= @user.surname %></p>
          <p class="card-text"><strong>Country:</strong> <%= @user.country %></p>
          <p class="card-text"><strong>Date of Birth:</strong> <%= @user.date_of_birth %></p>
          <p class="card-text"><strong>Email:</strong> <%= @user.email %></p>
          
      
    </div>
  </div>

  <div class="mb-3 d-flex justify-content-end">
    <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary w-100 py-2" %> |
  </div>
</div>