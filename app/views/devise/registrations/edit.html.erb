<%= image_tag "bootstrap-logo.svg", width: "40", height: "32", class: "mb-4" %>
<h2 class="h3 mb-3 fw-normal">Settings</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-floating">
    <%= f.label :email, for: "floatingInput"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "email", class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="mb-4 mt-4">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-floating">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field form-floating">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field form-floating">
    <%= f.label :current_password %><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class:"btn btn-primary w-100 py-2" %>
  </div>
<% end %>

<h3 class="mb-4 mt-4">Cancel my account</h3>

<div class="mb-4 mt-4 ">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"btn btn-primary w-100 py-2" %></div>

<%= link_to "Back", :back %>

